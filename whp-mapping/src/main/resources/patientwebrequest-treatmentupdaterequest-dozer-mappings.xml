<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">

    <mapping wildcard="true">
        <class-a>org.motechproject.whp.request.PatientWebRequest</class-a>
        <class-b>org.motechproject.whp.patient.contract.TreatmentUpdateRequest</class-b>
        <field custom-converter="org.motechproject.whp.mapping.StringToDateTime">
            <a>date_modified</a>
            <b>date_modified</b>
        </field>
        <field custom-converter="org.motechproject.whp.mapping.StringToDateTime">
            <a>smear_test_date_1</a>
            <b>smear_test_date_1</b>
        </field><field custom-converter="org.motechproject.whp.mapping.StringToDateTime">
            <a>smear_test_date_2</a>
            <b>smear_test_date_2</b>
        </field>
        <field custom-converter-id="stringToTreatmentCategory">
            <a>treatment_category</a>
            <b>treatment_category</b>
        </field>
        <field custom-converter="org.motechproject.whp.mapping.StringToEnumeration">
            <a>treatment_update</a>
            <b>treatment_update</b>
        </field>
        <field custom-converter="org.motechproject.whp.mapping.StringToEnumeration">
            <a>smear_test_result_1</a>
            <b>smear_test_result_1</b>
        </field>
        <field custom-converter="org.motechproject.whp.mapping.StringToEnumeration">
            <a>smear_test_result_2</a>
            <b>smear_test_result_2</b>
        </field>
        <field custom-converter="org.motechproject.whp.mapping.StringToEnumeration">
            <a>disease_class</a>
            <b>disease_class</b>
        </field>
        <field custom-converter="org.motechproject.whp.mapping.StringToEnumeration">
            <a>smear_sample_instance</a>
            <b>smear_sample_instance</b>
        </field>
        <field custom-converter="org.motechproject.whp.mapping.StringToEnumeration">
            <a>weight_instance</a>
            <b>weight_instance</b>
        </field>
    </mapping>
</mappings>