<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="migration" class="org.apache.log4j.ConsoleAppender"/>

    <logger name="org.motechproject.whp.logger.MigrationLogger">
        <appender-ref ref="migration"/>
        <level value="all"/>
    </logger>

    <root>
        <priority value="info"/>
    </root>

</log4j:configuration>
