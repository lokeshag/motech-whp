<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <import resource="classpath*:applicationWHPContext.xml"/>
    <import resource="classpath*:applicationValidationContext.xml"/>
    <import resource="classpath*:applicationWHPAdherenceContext.xml"/>
    <import resource="classpath*:applicationWebSecurityContext.xml"/>
    <import resource="classpath:applicationContext-caseService.xml"/>

    <context:annotation-config/>
    <context:component-scan base-package="org.motechproject.whp"/>

    <bean id="validator" class="org.springframework.validation.beanvalidation.LocalValidatorFactoryBean"/>

</beans>
