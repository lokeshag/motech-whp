<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">

    <mapping wildcard="true">
        <class-a>org.motechproject.whp.request.PatientWebRequest</class-a>
        <class-b>org.motechproject.whp.patient.contract.PatientRequest</class-b>
        <field custom-converter="org.motechproject.whp.application.mapping.StringToDateTime">
            <a>date_modified</a>
            <b>date_modified</b>
        </field>
        <field custom-converter="org.motechproject.whp.application.mapping.StringToDateTime">
            <a>date_modified</a>
            <b>treatmentStartDate</b>
        </field>
        <field custom-converter-id="stringToTreatmentCategory">
            <a>treatment_category</a>
            <b>treatment_category</b>
        </field>
        <field custom-converter="org.motechproject.whp.application.mapping.StringToEnumeration">
            <a>disease_class</a>
            <b>disease_class</b>
        </field>
        <field custom-converter="org.motechproject.whp.application.mapping.StringToEnumeration">
            <a>gender</a>
            <b>gender</b>
        </field>
        <field custom-converter="org.motechproject.whp.application.mapping.StringToEnumeration">
            <a>patient_type</a>
            <b>patient_type</b>
        </field>
        <!--Nested Address Fields-->
        <field>
            <a>address_location</a>
            <b>address.address_location</b>
        </field>
        <field>
            <a>address_block</a>
            <b>address.address_block</b>
        </field>
        <field>
            <a>address_village</a>
            <b>address.address_village</b>
        </field>
        <field>
            <a>address_landmark</a>
            <b>address.address_landmark</b>
        </field>
        <field>
            <a>address_district</a>
            <b>address.address_district</b>
        </field>
        <field>
            <a>address_state</a>
            <b>address.address_state</b>
        </field>
        <!--Nested smear Test result Fields-->
        <field custom-converter="org.motechproject.whp.application.mapping.StringToEnumeration">
            <a>smear_sample_instance</a>
            <b>smearTestResults.smear_sample_instance</b>
        </field>
        <field custom-converter="org.motechproject.whp.application.mapping.StringToDateTime">
            <a>smear_test_date_1</a>
            <b>smearTestResults.smear_test_date_1</b>
        </field>
        <field custom-converter="org.motechproject.whp.application.mapping.StringToEnumeration">
            <a>smear_test_result_1</a>
            <b>smearTestResults.smear_test_result_1</b>
        </field>
        <field custom-converter="org.motechproject.whp.application.mapping.StringToDateTime">
            <a>smear_test_date_2</a>
            <b>smearTestResults.smear_test_date_2</b>
        </field>
        <field custom-converter="org.motechproject.whp.application.mapping.StringToEnumeration">
            <a>smear_test_result_2</a>
            <b>smearTestResults.smear_test_result_2</b>
        </field>
        <!--Nested weight statistics Fields-->
        <field custom-converter="org.motechproject.whp.application.mapping.StringToEnumeration">
            <a>weight_instance</a>
            <b>weightStatistics.weight_instance</b>
        </field>
        <field>
            <a>weight</a>
            <b>weightStatistics.weight</b>
        </field>
        <field custom-converter="org.motechproject.whp.application.mapping.StringToDateTime">
            <a>date_modified</a>
            <b>weightStatistics.measuringDate</b>
        </field>
    </mapping>

</mappings>