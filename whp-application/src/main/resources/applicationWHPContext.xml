<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <import resource="classpath*:applicationPatientContext.xml"/>

    <context:annotation-config/>
    <context:component-scan base-package="org.motechproject.whp.application"/>

    <bean id="patientRequestMapper" class="org.dozer.DozerBeanMapper">
        <property name="mappingFiles">
            <list>
                <value>dozer-global-configuration.xml</value>
                <value>patientwebrequest-patientrequest-dozer-mappings.xml</value>
            </list>
        </property>
        <property name="customConvertersWithId">
            <map>
                <entry key="stringToTreatmentCategory" value-ref="stringToTreatmentCategory"/>
            </map>
        </property>
    </bean>

    <bean id="treatmentUpdateRequestMapper" class="org.dozer.DozerBeanMapper">
        <property name="mappingFiles">
            <list>
                <value>dozer-global-configuration.xml</value>
                <value>patientwebrequest-treatmentupdaterequest-dozer-mappings.xml</value>
            </list>
        </property>
        <property name="customConvertersWithId">
            <map>
                <entry key="stringToTreatmentCategory" value-ref="stringToTreatmentCategory"/>
            </map>
        </property>
    </bean>
</beans>
